mixin Items(config)
  .col-md-4.mb-3.mb-md-0
    .card.h-100.card-span
      .card-body
        h5.mb-0.text-primary Fantastic service!
        p.card-text.pt-3=config.text
        .d-flex.justify-content-between.align-items-center
          .d-flex.align-items-center
            i.fas.fa-star.text-primary.me-1
            i.fas.fa-star.text-primary.me-1
            i.fas.fa-star.text-primary.me-1
            i.fas.fa-star.text-primary.me-1
            i.fas.fa-star.text-primary.me-1
           
          .d-flex.align-items-center
            img(src=`${CWD}assets/img/icons/${config.image}` alt='').img-fluid
            .flex-1.ms-3
              h6.mb-0.fs--1.text-1000.fw-medium=config.name 
              p.fs--2.fw-normal.mb-0=config.country
         


